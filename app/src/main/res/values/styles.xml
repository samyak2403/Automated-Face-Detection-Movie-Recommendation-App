<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Circle image style for profile pictures -->
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Chat bubble styles -->
    <style name="ChatBubble">
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:maxWidth">280dp</item>
    </style>
    
    <style name="ChatBubble.Received">
        <item name="android:background">@drawable/bg_message_received</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">64dp</item>
    </style>
    
    <style name="ChatBubble.Sent">
        <item name="android:background">@drawable/bg_message_sent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>
    
    <!-- Timestamp styles -->
    <style name="ChatTimestamp">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
</resources> 