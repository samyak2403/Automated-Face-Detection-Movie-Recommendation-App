<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/disney_card_background">

    <!-- App Bar with back button and title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title=""
        app:titleTextColor="@color/disney_text_primary">
        
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            android:tint="@color/disney_text_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Movie Details"
            android:textColor="@color/disney_text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Collapsing image with parallax effect -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@android:color/transparent"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/detail_movie_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_launcher_foreground" />
                    
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/disney_poster_gradient" />
            </androidx.cardview.widget.CardView>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp">

            <!-- Movie Title -->
            <TextView
                android:id="@+id/detail_movie_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/disney_text_primary"
                android:textSize="28sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Avengers: Endgame" />

            <!-- Basic Info Card: Year, Type, Rating -->
            <androidx.cardview.widget.CardView
                android:id="@+id/movie_meta_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/detail_movie_title">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Year and Type in a row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <TextView
                            android:id="@+id/detail_movie_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_calendar"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/disney_blue"
                            tools:text="2019" />

                        <TextView
                            android:id="@+id/detail_movie_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_movie"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/disney_purple"
                            tools:text="Movie" />
                    </LinearLayout>

                    <!-- IMDB ID and Rating in a row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">
                        
                        <TextView
                            android:id="@+id/detail_movie_imdb_id"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_imdb"
                            android:drawablePadding="8dp"
                            tools:text="tt4154796" />
                            
                        <TextView
                            android:id="@+id/detail_movie_rating"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_sar"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/yellow_imdb"
                            tools:text="8.4/10" />
                    </LinearLayout>
                    
                    <!-- Runtime and Rated in a row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">
                        
                        <TextView
                            android:id="@+id/detail_movie_runtime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_movie"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/disney_teal"
                            tools:text="181 min" />
                            
                        <TextView
                            android:id="@+id/detail_movie_rated"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            android:drawableStart="@drawable/ic_movie"
                            android:drawablePadding="8dp"
                            android:drawableTint="@color/disney_pink"
                            tools:text="PG-13" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Genre Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/genre_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/movie_meta_card">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Genre"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_movie_genre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/disney_text_secondary"
                        android:textSize="16sp"
                        tools:text="Action, Adventure, Drama, Sci-Fi" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Credits Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/credits_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/genre_card">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Credits"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_movie_director_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Director" />
                        
                    <TextView
                        android:id="@+id/detail_movie_director"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/disney_text_secondary"
                        android:textSize="16sp"
                        tools:text="Anthony Russo, Joe Russo" />
                        
                    <TextView
                        android:id="@+id/detail_movie_writer_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Writer" />
                        
                    <TextView
                        android:id="@+id/detail_movie_writer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/disney_text_secondary"
                        android:textSize="16sp"
                        tools:text="Christopher Markus, Stephen McFeely" />
                        
                    <TextView
                        android:id="@+id/detail_movie_actors_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Actors" />
                        
                    <TextView
                        android:id="@+id/detail_movie_actors"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/disney_text_secondary"
                        android:textSize="16sp"
                        tools:text="Robert Downey Jr., Chris Evans, Mark Ruffalo, Chris Hemsworth" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Additional Info Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/additional_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/credits_card">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Additional Information"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <!-- Language section -->
                        <TextView
                            android:id="@+id/detail_movie_language_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Language: " />
                        
                        <!-- Country section -->
                        <TextView
                            android:id="@+id/detail_movie_country_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Country: " />
                        
                        <!-- Awards section -->
                        <TextView
                            android:id="@+id/detail_movie_awards_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Awards: " />
                            
                        <TextView
                            android:id="@+id/detail_movie_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            tools:text="English" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Country: " />
                            
                        <TextView
                            android:id="@+id/detail_movie_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            tools:text="USA" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Awards: " />
                            
                        <TextView
                            android:id="@+id/detail_movie_awards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/disney_text_secondary"
                            android:textSize="16sp"
                            tools:text="Nominated for 1 Oscar. 70 wins &amp; 129 nominations total" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Plot Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/plot_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/additional_info_card">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    
                    <TextView
                        android:id="@+id/plot_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Plot"
                        android:textColor="@color/disney_text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_movie_plot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/disney_text_secondary"
                        android:textSize="16sp"
                        tools:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe." />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            
            <!-- Watch Now Button -->
            <Button
                android:id="@+id/watch_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/disney_rounded_button"
                android:text="Watch Now"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/plot_card" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button for favorites -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@drawable/ic_favorite_border"
        app:backgroundTint="@color/disney_pink"
        app:layout_constraintBottom_toBottomOf="@id/app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/white"
        app:tint="@color/white"
        app:borderWidth="0dp"
        app:elevation="8dp" />
        
    <!-- Loading Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/loading_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/disney_blue"
        app:trackColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>